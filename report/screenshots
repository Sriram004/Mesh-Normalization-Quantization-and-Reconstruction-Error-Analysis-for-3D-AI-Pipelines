import open3d as o3d

pcd = o3d.io.read_point_cloud("outputs/reconstructed/person_unitsphere_reconstructed.ply")
o3d.visualization.draw_geometries([pcd])
o3d.io.write_image("report/screenshots/reconstructed_mesh.png")
