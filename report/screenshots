Copy code
from mpl_toolkits.mplot3d import Axes3D
import matplotlib.pyplot as plt
import numpy as np

vertices = np.loadtxt("outputs/reconstructed/person_unitsphere_reconstructed.ply", skiprows=10)
fig = plt.figure()
ax = fig.add_subplot(111, projection="3d")
ax.scatter(vertices[:, 0], vertices[:, 1], vertices[:, 2], s=1)
plt.title("Reconstructed Mesh")
plt.savefig("report/screenshots/reconstructed_mesh.png")
